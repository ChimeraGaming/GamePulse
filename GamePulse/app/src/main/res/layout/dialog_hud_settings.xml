<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!--
        ╔═══════════════════════════════════════════════════════════════════════╗
        ║                            DIALOG TITLE                               ║
        ╚═══════════════════════════════════════════════════════════════════════╝
        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HUD Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!--
        ╔═══════════════════════════════════════════════════════════════════════╗
        ║                         REFRESH RATE ROW                              ║
        ╚═══════════════════════════════════════════════════════════════════════╝
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="56dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Refresh Rate"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/refreshRateSelectedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Seconds"
                android:textSize="14sp"
                android:paddingEnd="12dp"
                android:paddingStart="8dp"
                android:textColor="?attr/colorPrimary" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/refreshRateSpinner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:dropDownWidth="200dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!--
        ╔═══════════════════════════════════════════════════════════════════════╗
        ║                           RAM THEME ROW                               ║
        ╚═══════════════════════════════════════════════════════════════════════╝
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="56dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RAM Theme"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ramThemeSelectedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power Cores"
                android:textSize="14sp"
                android:paddingEnd="12dp"
                android:paddingStart="8dp"
                android:textColor="?attr/colorPrimary" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/ramThemeSpinner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:dropDownWidth="200dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!--
        ╔═══════════════════════════════════════════════════════════════════════╗
        ║                        BATTERY THEME ROW                              ║
        ╚═══════════════════════════════════════════════════════════════════════╝
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="56dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Battery Theme"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/batteryThemeSelectedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats Panel"
                android:textSize="14sp"
                android:paddingEnd="12dp"
                android:paddingStart="8dp"
                android:textColor="?attr/colorPrimary" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/batteryThemeSpinner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:dropDownWidth="200dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!--
        ╔═══════════════════════════════════════════════════════════════════════╗
        ║                          ACTION BUTTONS                               ║
        ╚═══════════════════════════════════════════════════════════════════════╝
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>