    <!-- Cyberpunk Theme - Hot Pink, Cyan & Yellow (VS Code Style) -->
    <style name="Theme.HUDTracker.Cyberpunk" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary: Hot Pink/Magenta (Buttons) -->
        <item name="colorPrimary">#FF0080</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#4D0026</item>
        <item name="colorOnPrimaryContainer">#FFE600</item> <!-- Yellow text on pink containers -->

        <!-- Secondary: Neon Cyan (Links, Icons) -->
        <item name="colorSecondary">#00D9FF</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryContainer">#004D66</item>
        <item name="colorOnSecondaryContainer">#FFE600</item> <!-- Yellow text on cyan containers -->

        <!-- Tertiary: Neon Yellow (Accents, Headers) -->
        <item name="colorTertiary">#FFE600</item>
        <item name="colorOnTertiary">#1A0033</item>
        <item name="colorTertiaryContainer">#665C00</item>
        <item name="colorOnTertiaryContainer">#FFFF80</item>

        <!-- Background: Deep Purple -->
        <item name="android:colorBackground">#1E1E3F</item>
        <item name="colorOnBackground">#E0E0FF</item>

        <!-- Surface: Darker Purple -->
        <item name="colorSurface">#2A2A5A</item>
        <item name="colorOnSurface">#FFE600</item> <!-- Yellow primary text -->
        <item name="colorSurfaceVariant">#3D3D6B</item>
        <item name="colorOnSurfaceVariant">#00D9FF</item> <!-- Cyan secondary text -->

        <!-- Error: Hot Pink -->
        <item name="colorError">#FF0080</item>
        <item name="colorOnError">#FFFFFF</item>
    </style>

