<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape layout optimized for AYN Odin Thor (1920x1200 / 1920x1080) -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Title - Compact for landscape -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_subtitle"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Update Interval Selector - Compact -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/update_interval"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/updateIntervalSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="150dp"
                        android:minHeight="48dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Two-column layout for landscape -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="6dp">

                    <!-- Battery Monitoring Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/battery_monitoring"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:layout_marginBottom="10dp" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/voltageLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/voltage"
                                    android:textSize="13sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/batteryVoltageText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/levelLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/battery_level"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/voltageLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/batteryLevelText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/batteryVoltageText"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/statusLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/status"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/levelLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/batteryStatusText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="14sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/batteryLevelText"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/healthLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/health"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/statusLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/batteryHealthText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="14sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/batteryStatusText"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/temperatureLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/temperature"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/healthLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/batteryTemperatureText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="14sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/batteryHealthText"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/estimatedLifeLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/estimated_life"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/temperatureLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/estimatedLifeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorSecondary"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/batteryTemperatureText"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Battery Analysis Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/battery_analysis"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:layout_marginBottom="10dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/startAnalysisButton"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:text="@string/start_1hour_analysis"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/stopAnalysisButton"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:text="@string/stop_analysis"
                                android:textSize="14sp"
                                android:enabled="false"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_marginBottom="8dp" />

                            <ProgressBar
                                android:id="@+id/analysisProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="100"
                                android:progress="0"
                                android:visibility="gone"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/analysisStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/na"
                                android:textSize="13sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="6dp">

                    <!-- RAM Monitoring Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ram_monitoring"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:layout_marginBottom="10dp" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/ramUsageLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ram_usage"
                                    android:textSize="13sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/ramUsageText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/ramTotalLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ram_total"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/ramUsageLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/ramTotalText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/ramUsageText"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <ProgressBar
                                    android:id="@+id/ramProgressBar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:max="100"
                                    android:progress="0"
                                    app:layout_constraintTop_toBottomOf="@id/ramTotalLabel"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/ramPercentageText" />

                                <TextView
                                    android:id="@+id/ramPercentageText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="8dp"
                                    app:layout_constraintTop_toTopOf="@id/ramProgressBar"
                                    app:layout_constraintBottom_toBottomOf="@id/ramProgressBar"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Analysis Results Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/analysisResultCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/analysis_results"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:layout_marginBottom="10dp" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/durationLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/duration"
                                    android:textSize="13sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/analysisDurationText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/batteryDrainLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/battery_drain"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/durationLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/analysisBatteryDrainText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/analysisDurationText"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/voltageDropLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/voltage_drop"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/batteryDrainLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/analysisVoltageDrop"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/analysisBatteryDrainText"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/estimatedLifeAnalysisLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/est_remaining_life"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/voltageDropLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/analysisEstimatedLifeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/analysisVoltageDrop"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:id="@+id/drainRateLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/drain_rate"
                                    android:textSize="13sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/estimatedLifeAnalysisLabel"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/analysisDrainRateText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/na"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/analysisEstimatedLifeText"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/top_energy_apps"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="6dp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/appUsageRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
